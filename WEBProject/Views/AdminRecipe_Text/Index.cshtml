@model List<Recipe_Text>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>
<a asp-action="Create">Create</a>

@foreach (Recipe_Text P in Model)
{
    <div class="row Admin_Flex">
        <form asp-action="Edit" method="get">
            <input type="hidden" name="TextID" value="@P.TextID" />
            <input type="hidden" name="RecipeID" value="@P.RecipeID" />
            <input type="submit" value="Edit" />
        </form>
        <form asp-action="Delete" method="post">
            <input type="hidden" name="TextID" value="@P.TextID" />
            <input type="hidden" name="RecipeID" value="@P.RecipeID" />
            <input type="submit" value="Delete" />
        </form>
        <div>
            | RecieID:@P.RecipeID | TextID:@P.TextID
        </div>
    </div>

}