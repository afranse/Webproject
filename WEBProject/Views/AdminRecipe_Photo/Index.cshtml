@model List<Recipe_Photo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>
<a asp-action="Create">Create</a>

@foreach (Recipe_Photo P in Model)
{
    <div class="row Admin_Flex">
        <form asp-action="Edit" method="get">
            <input type="hidden" name="PhotoID" value="@P.PhotoID" />
            <input type="hidden" name="RecipeID" value="@P.RecipeID" />
            <input type="submit" value="Edit" />
        </form>
        <form asp-action="Delete" method="post">
            <input type="hidden" name="PhotoID" value="@P.PhotoID" />
            <input type="hidden" name="RecipeID" value="@P.RecipeID" />
            <input type="submit" value="Delete" />
        </form>
        <div>
            | RecieID:@P.RecipeID | PhotoID:@P.PhotoID
        </div>
    </div>

}