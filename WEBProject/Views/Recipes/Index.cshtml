<div class="container">
    <div class="row">
        <div class="col-4 col-sm-4 col-md-4">
            <img src="https://baconmockup.com/300/200/" alt="temp image" />
        </div>
        <div class="col-8 col-sm-8 col-md-8">
            <h2>Recipes page</h2>
            <p>More or less bacon?</p>
        </div>
    </div>
    @{
        List<int> lijst = new List<int>
{
1,
2,
3,
4,
5,
6
};
    }

    <div class="container">
        <div class="row">
            <div class="col-4 col-sm-4 col-md-4">
                <partial name="_RecipesSideTab" />
                <partial name="_SingleContact" />
            </div>

            <div class="col-8 col-sm-8 col-md-8">
                <div class="container">
                    <div class="container recipeOverview">
                        @for (int x = 0; x < lijst.Count(); x = x + 3)
                        {
                            <div class="row">
                                @for (int i = 0; i < 3; i++)
                                {
                                    <div class="col-4 col-sm-4 col-md-4">
                                        <partial name="_Catalog2" />
                                    </div>
                                };

                            </div>
                        };
                    </div>
                </div>

            </div>

        </div>
    </div>


</div>

