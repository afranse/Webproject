@model Employee_Profile
<div class="container-fluid SpecificProductContainers">
    <div class="row justify-content-flex-start">
        <h1> Contact us </h1>
    </div>
    <div class="WideContacts_container-looks">

        <div class="contact_top">
            <div class="row" id="contact_profile">
                <div class="col-md-5">
                    <img src="~/images/Sir.png" id="contact_pic" />
                </div>
                <div class="col-md-7">
                    <b size="4">@Model.Name</b>
                    <p> @Model.Job </p>
                </div>
            </div>
        </div>

        <div class="contact_bottom">
            <div class="row">
                <div class="col-md-5" id="contact_r">
                    <img src="~/images/mb.png" id="contact_mbpic">
                    <a href="tel:+316-22571514" id="contact_c1">@Model.Phone_Numbers.ElementAt(0).Number</a>
                </div>
                <div class="col-md-5" id="contact_r">
                    <img src="~/images/mail.png" id="contact_mbpic" />
                    <a href="mailto:hhensen@verstegen.nl" id="contact_c1">@Model.Emails.ElementAt(0).Email</a>
                </div>
                <div class="col-md-5" id="contact_r">
                    <img src="~/images/message.png" id="contact_mbpic" />
                    <a href="sms:+316-22571514" id="contact_c1">Send a message</a>
                </div>
                <div class="col-md-6"></div>
            </div>
        </div>
    </div>
    <div class="row contact_button_lineout">
        <button class="contact_button">All contacts</button>
    </div>
</div>

