@model List<TypeCategory_Recipe>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>
<a asp-action="Create">Create</a>

@foreach (TypeCategory_Recipe P in Model)
{
    <div class="row Admin_Flex">
        <form asp-action="Edit" method="get">
            <input type="hidden" name="TypeID" value="@P.TypeID" />
            <input type="hidden" name="RecipeID" value="@P.RecipeID" />
            <input type="submit" value="Edit" />
        </form>
        <form asp-action="Delete" method="post">
            <input type="hidden" name="TypeID" value="@P.TypeID" />
            <input type="hidden" name="RecipeID" value="@P.RecipeID" />
            <input type="submit" value="Delete" />
        </form>
        <div>
            | RecipeID:@P.RecipeID | TypeID:@P.TypeID
        </div>
    </div>

}